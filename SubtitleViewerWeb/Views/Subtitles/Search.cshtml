@model SubtitleViewerWeb.Models.SearchModel

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "Subtitles", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h5>Find subtitle files via the web</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control text-box single-line", @Value = "" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Language, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.Language, Model.LanguagesList, "-- Select Item --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Season, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.TextBoxFor(model => model.Season, new { @type = "text", @class = "form-control", @Value = "" })
                @Html.ValidationMessageFor(model => model.Season, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.Episode, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.TextBoxFor(model => model.Episode, new { @type = "text", @class = "form-control", @Value = "" })
                @Html.ValidationMessageFor(model => model.Episode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>

        <br />

        <div>
            <p><i>Powered by:</i></p>
            <a href="http://www.opensubtitles.org" target="_blank">
                <img class="img-responsive" src="/Content/Images/OpenSubtitles.png" alt="Open Subtitles Logo">
            </a>            
        </div>
    </div>
}